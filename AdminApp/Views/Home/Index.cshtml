@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
    var esTotal = ViewBag.esTotal;
    var esValidadas = ViewBag.esValidadas;
    var esPendientes = ViewBag.esPendientes;
    var esRechazadas = ViewBag.esRechazadas;

    var ptTotal = ViewBag.ptTotal;
    var ptValidadas = ViewBag.ptValidadas;
    var ptPendientes = ViewBag.ptPendientes;
    var ptRechazadas = ViewBag.ptRechazadas;

    var userRole = ViewBag.userRole;
    var userRegion = ViewBag.userRegion;

    var home_url = Context.Request.Path;
}
@section Styles{
    <!-- Morris chart -->
    <link rel="stylesheet" href="~/AdminLTE/components/morris.js/morris.css">
    <!-- jvectormap -->
    <link rel="stylesheet" href="~/AdminLTE/components/jvectormap/jquery-jvectormap.css">
    <!-- Date Picker -->
    <link rel="stylesheet" href="~/AdminLTE/components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/AdminLTE/components/bootstrap-daterangepicker/daterangepicker.css">
    <!-- bootstrap wysihtml5 - text editor -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @ViewData["Title"]
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    @if (!(userRole == "0" && userRegion == "1"))
    {
        <!-- Small boxes (Stat box ES) -->
        <div class="row">
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>@esTotal</h3>

                        <p>Participaciones ESPAÑA</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-pie-chart"></i>
                    </div>
                    <div class="small-box-footer">
                        @ViewBag.esTotalSum Neumáticos
                    </div>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>@esValidadas (@ViewBag.esValidadasPro<sup style="font-size: 20px">%</sup>)</h3>

                        <p>Validadas</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-pie-chart"></i>
                    </div>
                    <div class="small-box-footer">
                        @ViewBag.esValidadasSum Neumáticos
                    </div>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>@esPendientes (@ViewBag.esPendientesPro<sup style="font-size: 20px">%</sup>)</h3>

                        <p>Pendientes</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-pie-chart"></i>
                    </div>
                    <div class="small-box-footer">
                        @ViewBag.esPendientesSum Neumáticos
                    </div>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3>@esRechazadas (@ViewBag.esRechazadasPro<sup style="font-size: 20px">%</sup>)</h3>

                        <p>Rechazadas</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-pie-chart"></i>
                    </div>
                    <div class="small-box-footer">
                        @ViewBag.esRechazadasSum Neumáticos
                    </div>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
    }
    @if (!(userRole == "0" && userRegion == "0"))
    {
        <!-- Small boxes (Stat box PT) -->
        <div class="row">
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>@ptTotal</h3>

                        <p>Participaciones PORTUGAL</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-pie-chart"></i>
                    </div>
                    <div class="small-box-footer">
                        @ViewBag.ptTotalSum Neumáticos
                    </div>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>@ptValidadas (@ViewBag.ptValidadasPro<sup style="font-size: 20px">%</sup>)</h3>

                        <p>Validadas</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-pie-chart"></i>
                    </div>
                    <div class="small-box-footer">
                        @ViewBag.ptValidadasSum Neumáticos
                    </div>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>@ptPendientes (@ViewBag.ptPendientesPro<sup style="font-size: 20px">%</sup>)</h3>

                        <p>Pendientes</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-pie-chart"></i>
                    </div>
                    <div class="small-box-footer">
                        @ViewBag.ptPendientesSum Neumáticos
                    </div>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3>@ptRechazadas (@ViewBag.ptRechazadasPro<sup style="font-size: 20px">%</sup>)</h3>

                        <p>Rechazadas</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-pie-chart"></i>
                    </div>
                    <div class="small-box-footer">
                        @ViewBag.ptRechazadasSum Neumáticos
                    </div>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
    }
    <!-- Main row -->
    <div class="row">
        <!-- Left col -->
        @if (userRole == "1" || userRegion == "2")
        {
            <section class="col-lg-12 connectedSortable">
                <!-- Custom tabs (Charts with tabs)-->
                <div class="nav-tabs-custom">
                    <!-- Tabs within a box -->
                    <ul class="nav nav-tabs pull-right">
                        <li class="active"><a href="#register-chart" data-toggle="tab">Gráfica</a></li>
                        <li class="pull-left header"><i class="fa fa-inbox"></i> Participaciones por Día</li>
                    </ul>
                    <div class="tab-content no-padding">
                        <!-- Morris chart - Sales -->
                        <div class="chart tab-pane active" id="register-chart" style="position: relative; height: 300px;"></div>
                    </div>
                </div>
                <!-- /.nav-tabs-custom -->
            </section>
        }
        else
        {
            <section class="col-lg-12 connectedSortable" style="display: none;">
                <!-- Custom tabs (Charts with tabs)-->
                <div class="nav-tabs-custom">
                    <!-- Tabs within a box -->
                    <ul class="nav nav-tabs pull-right">
                        <li class="active"><a href="#register-chart" data-toggle="tab">Gráfica</a></li>
                        <li class="pull-left header"><i class="fa fa-inbox"></i> Participaciones por Día</li>
                    </ul>
                    <div class="tab-content no-padding">
                        <!-- Morris chart - Sales -->
                        <div class="chart tab-pane active" id="register-chart" style="position: relative; height: 300px;"></div>
                    </div>
                </div>
                <!-- /.nav-tabs-custom -->
            </section>
        }
        <!-- Left col -->
        @if (userRole == "0" && userRegion == "0")
        {
            <section class="col-lg-12 connectedSortable">
                <!-- Custom tabs (Charts with tabs)-->
                <div class="nav-tabs-custom">
                    <!-- Tabs within a box -->
                    <ul class="nav nav-tabs pull-right">
                        <li class="active"><a href="#register-es-chart" data-toggle="tab">Gráfica</a></li>
                        <li class="pull-left header"><i class="fa fa-inbox"></i>Participaciones por Día</li>
                    </ul>
                    <div class="tab-content no-padding">
                        <!-- Morris chart - Sales -->
                        <div class="chart tab-pane active" id="register-es-chart" style="position: relative; height: 300px;"></div>
                    </div>
                </div>
                <!-- /.nav-tabs-custom -->
            </section>
        }
        else
        {
            <section class="col-lg-12 connectedSortable" style="display: none;">
                <!-- Custom tabs (Charts with tabs)-->
                <div class="nav-tabs-custom">
                    <!-- Tabs within a box -->
                    <ul class="nav nav-tabs pull-right">
                        <li class="active"><a href="#register-es-chart" data-toggle="tab">Gráfica</a></li>
                        <li class="pull-left header"><i class="fa fa-inbox"></i>Participaciones por Día</li>
                    </ul>
                    <div class="tab-content no-padding">
                        <!-- Morris chart - Sales -->
                        <div class="chart tab-pane active" id="register-es-chart" style="position: relative; height: 300px;"></div>
                    </div>
                </div>
                <!-- /.nav-tabs-custom -->
            </section>
        }

        <!-- Left col -->
        @if (userRole == "0" && userRegion == "1")
        {
            <section class="col-lg-12 connectedSortable">
                <!-- Custom tabs (Charts with tabs)-->
                <div class="nav-tabs-custom">
                    <!-- Tabs within a box -->
                    <ul class="nav nav-tabs pull-right">
                        <li class="active"><a href="#register-pt-chart" data-toggle="tab">Area</a></li>
                        <li class="pull-left header"><i class="fa fa-inbox"></i> Registration</li>
                    </ul>
                    <div class="tab-content no-padding">
                        <!-- Morris chart - Sales -->
                        <div class="chart tab-pane active" id="register-pt-chart" style="position: relative; height: 300px;"></div>
                    </div>
                </div>
                <!-- /.nav-tabs-custom -->
            </section>
        }
        else
        {
            <section class="col-lg-12 connectedSortable" style="display: none;">
                <!-- Custom tabs (Charts with tabs)-->
                <div class="nav-tabs-custom">
                    <!-- Tabs within a box -->
                    <ul class="nav nav-tabs pull-right">
                        <li class="active"><a href="#register-pt-chart" data-toggle="tab">Area</a></li>
                        <li class="pull-left header"><i class="fa fa-inbox"></i> Registration</li>
                    </ul>
                    <div class="tab-content no-padding">
                        <!-- Morris chart - Sales -->
                        <div class="chart tab-pane active" id="register-pt-chart" style="position: relative; height: 300px;"></div>
                    </div>
                </div>
                <!-- /.nav-tabs-custom -->
            </section>
        }
        <!-- /.Left col -->
        <!-- right col (We are only adding the ID to make the widgets sortable)-->
        <section class="col-lg-12 connectedSortable">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Listado Stock</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <table id="alertTable" name="grid" class="table table-bordered table-hover dataTable" width="100%" height="100vh">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Stock</th>
                                    <th>Pendientes</th>
                                    <th>Validadas</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </section>
        <!-- right col -->
    </div>
    <!-- /.row (main row) -->

</section>
<!-- /.content -->

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/AdminLTE/components/raphael/raphael.min.js"></script>
    <script src="~/AdminLTE/components/morris.js/morris.min.js"></script>
    <!-- Sparkline -->
    <script src="~/AdminLTE/components/jquery-sparkline/dist/jquery.sparkline.min.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/AdminLTE/components/jquery-knob/dist/jquery.knob.min.js"></script>
    <!-- daterangepicker -->
    <script src="~/AdminLTE/components/moment/min/moment.min.js"></script>
    <script src="~/AdminLTE/components/bootstrap-daterangepicker/daterangepicker.js"></script>
    <!-- datepicker -->
    <script src="~/AdminLTE/components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <!-- Bootstrap WYSIHTML5 -->
    <script src="~/AdminLTE/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <!-- Slimscroll -->
    <script src="~/AdminLTE/components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/AdminLTE/components/fastclick/lib/fastclick.js"></script>

    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
