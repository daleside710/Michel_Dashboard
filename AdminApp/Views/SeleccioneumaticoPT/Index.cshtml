@{
    ViewData["Title"] = "SELECIONE PNEUS COMPRADOS | UMA CURVA PROEMINENTE | MICHELIN";
}
@section Styles{
<link rel="stylesheet" href="~/css/promomichelin.css" />
    <style>
        .searchText {
            display: block;
            padding: 5px 0px;
            margin: 10px 10px 10px 10px;
            width: 92%;
        }

        .scroll {
            height: 180px;
            overflow-y: scroll;
        }
    </style>
    <link rel="stylesheet" href="~/lib/select2/select2.min.css" />
}
<div class="content contentMichelinIndex">
    <div class="container containerMichelinIndex">
        <div id="contentSelNeu">
            <div class="tit">Selecione os pneus que comprou</div>
            <div class="contentRuedas">
                <form id="participa" method="post" action="seleccion-select-form-pt">
                    <div id="ruedascoche">
                        <div id="cboruedas" class="cbomenudesplegable" tabindex="1">
                            <span class="cboCoche llanta_model">Modelo dos pneus</span>
                            <input type="hidden" name="llanta_model"/>
                            <ul class="dropdown">
                                <li><input type="text" class="searchText" id="llanta_model" placeholder="Procurar ..." /></li>
                            </ul>
                        </div>
                        <div>
                            <div id="cboruedas2" class="cbomenudesplegable" tabindex="1">
                                <span class="cboCoche llanta">Tamanho da jante</span>
                                <input type="hidden" name="llanta" />
                                <ul class="dropdown dropdow_m">
                                    <li><a href="#">16" OU INFERIOR</a></li>
                                    <li><a href="#">17" OU SUPERIOR</a></li>
                                </ul>
                            </div>
                            <div id="cbollantas" class="cbomenudesplegable" tabindex="1">
                                <span class="cboCoche neumatico">Número de pneus comprados</span>
                                <input type="hidden" name="neumatico" />
                                <ul class="dropdown">
                                    <li><a href="#">2 PNEUS</a></li>
                                    <li><a href="#">4 PNEUS</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/lib/select2/select2.min.js"></script>
    <script src="~/js/views/SeleccioneumaticoPT/index.js"></script>
}