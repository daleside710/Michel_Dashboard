@inject UserManager<User> UserManager
@{ 
    var currentUser = await UserManager.GetUserAsync(User);
    var username = currentUser.nombre_usu;
    if(username == null)
    {
        username = "Untitled";
    }
}
<header class="main-header">
    <!-- Logo -->
    <a href="/" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b style="color:#054d79">CM</b></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg" style="height:100%"><img src="~/images/logo.png" style="height:80%" alt="Logo Image"></span>
        
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>

        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <!-- User Account: style can be found in dropdown.less -->
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="~/AdminLTE/dist/img/sample.png" class="user-image" alt="User Image">
                        <span class="hidden-xs">@username</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <img src="~/AdminLTE/dist/img/sample.png" class="img-circle" alt="User Image">
                            <p>
                                @username
                            </p>
                        </li>

                        <li class="user-footer">
                            
                            <div class="pull-right">
                                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                    <button type="submit" class="btn btn-default btn-flat logoutbtn">Cerrar Sesión</button>
                                </form>
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</header>