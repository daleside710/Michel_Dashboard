    <div class="modal-dialog modal-md">
        <div class="modal-content">

        </div>
    </div>
</div>

<div class="modal modal-primary fade" id="modalReenviar" style="padding-top: 100px;">
    <div class="modal-dialog modal-md">
        <div class="modal-content">

