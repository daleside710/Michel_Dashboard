@{
    ViewData["Title"] = "Participacion";
    Layout = "_Layout";
    var total = ViewBag.total;
    var pend = ViewBag.pend;
    var modi = ViewBag.modi;
    var actu = ViewBag.actu;
    var vali = ViewBag.vali;
    var recha = ViewBag.recha;
}
@section Styles{
    <style>
        input[type='checkbox'] {
            margin-left: 10px;
            margin-right: 5px;
        }
    </style>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Listado @ViewData["Title"]es
        <br />
        <small>@ViewData["Title"]es registradas en la web de la campaña de Michelin</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li class="active">@ViewData["Title"]es</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row right">
        <div class="col-md-12">
            <a class="btn btn-default csv-btn" asp-controller="Participaciones" asp-action="TodasCSV"><i class="fa fa-file-excel-o"></i> Todas Participaciones</a>
            <a class="btn btn-default csv-btn" asp-controller="Participaciones" asp-action="RechazadoCSV"><i class="fa fa-file-excel-o"></i> Rechazado</a>
            <a class="btn btn-default csv-btn" asp-controller="Participaciones" asp-action="ValidadoCSV"><i class="fa fa-file-excel-o"></i> Validado</a>
            <a class="btn btn-default csv-btn" asp-controller="Participaciones" asp-action="ActualizandoCSV"><i class="fa fa-file-excel-o"></i> Actualizando</a>
            <a class="btn btn-default csv-btn" asp-controller="Participaciones" asp-action="ModificandoCSV"><i class="fa fa-file-excel-o"></i> Modificando</a>
            <a class="btn btn-default csv-btn" asp-controller="Participaciones" asp-action="PendienteCSV"><i class="fa fa-file-excel-o"></i> Pendiente</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row" style="padding-right: 10px;padding-left: 10px;">
                        <div class="col-lg-12 table-responsive">
                            @*<input type="checkbox"  id="todos" />TODOS
                            <input type="checkbox" class="filter_option" id="id_par"/>ID
                            <input type="checkbox" class="filter_option" id="registrofecha_par" />Fecha Registro
                            <input type="checkbox" class="filter_option" id="registrohora_par" />Hora Registro
                            <input type="checkbox" class="filter_option" id="nombre_par" />Nombre
                            <input type="checkbox" class="filter_option" id="apellidos_par" />Apellidos
                            <input type="checkbox" class="filter_option" id="telefono_par" />Teléfono
                            <input type="checkbox" class="filter_option" id="email_par" />Email
                            <input type="checkbox" class="filter_option" id="dni_par" />DNI
                            <input type="checkbox" class="filter_option" id="regalo_par" />Regalo
                            <input type="checkbox" class="filter_option" id="pais_par" />País
                            <input type="checkbox" class="filter_option" id="estado_par" />Estado*@
                            @*<select class="form-control input-sm" id="filter_select">
                                <option value="todos">TODOS</option>
                                <option value="id_par">ID</option>
                                <option value="registrofecha_par">Fecha Registro</option>
                                <option value="registrohora_par">Hora Registro</option>
                                <option value="nombre_par">Nombre</option>
                                <option value="apellidos_par">Apellidos</option>
                                <option value="telefono_par">Teléfono</option>
                                <option value="email_par">Email</option>
                                <option value="dni_par">DNI</option>
                                <option value="regalo_par">Regalo</option>
                                <option value="pais_par">País</option>
                                <option value="estado_par">Estado</option>
                            </select>*@
                            <table id="grid" name="grid" class="table table-bordered table-hover dataTable" width="100%" height="100vh">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th width="10%">Fecha Registro</th>
                                        <th>Hora Registro</th>
                                        <th>Nombre</th>
                                        <th>Apellidos</th>
                                        <th>Teléfono</th>
                                        <th>Email</th>
                                        <th>DNI</th>
                                        <th>Regalo</th>
                                        <th>País</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <p style="margin-bottom: 0px;">Nº Participaciones Totales: @total</p>
            <p style="margin-bottom: 0px;color: #EC721F">Nº Participaciones Pendientes: @pend</p>
            <p style="margin-bottom: 0px;color: #EC721F">
                Nº Participaciones Modificando: @modi
            </p>
            <p style="margin-bottom: 0px;color: #EC721F">Nº Participaciones Actualizando: @actu</p>
            <p style="margin-bottom: 0px;color: #079328">Nº Participaciones Validadas: @vali</p>
            <p style="margin-bottom: 0px;color: #C40F12">Nº Participaciones Rechazadas: @recha</p>
        </div>
    </div>
</section>
<!-- /.content -->
