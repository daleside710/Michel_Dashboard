@{
    ViewData["Title"] = "CHEQUE REGALO AMAZON.ES 20€ | Detalle Regalo | Vuelta al Cole | Michelin";
    var currentUrl = Context.Request.Path;
    var seleccionBtn = false;
    if (currentUrl.ToString().Contains("-seleccion"))
    {
        seleccionBtn = true;
    }
    var hiddenidsession = ViewBag.hiddenidsession;
}
@section Styles{
<link rel="stylesheet" href="~/css/promomichelin.css" />
    <style>
       
        #containerRegalo {
            max-width: 750px;
        }

    </style>
}
<div class="content contentMichelinRegalo">
    <div class="container containerMichelinRegalo">
        <div id="containerRegalo">
            <div class="volver">
                @if (seleccionBtn)
                {
                    <a href="@Url.Action("Regalo", "Seleccioneumatico")">< Volver</a>
                }
            </div>
            <div class="row" style="margin: 30px 0px 30px 0px;">
                <div class="col-xl-5 col-lg-5 col-md-5 col-sm-12 col-xs-12 leftPremio">
                    <img src="~/images/premios/es/regalo_amazon.jpg" alt="CHEQUE REGALO AMAZON.ES" class="img-fluid" style="max-width:300px;" />
                </div>
                <div class="col-xl-7 col-lg-7 col-md-7 col-sm-12 col-xs-12">
                    <div class="titPremio">CHEQUE REGALO AMAZON.ES 20€</div>
                    <div class="txtPremio">
                        <p>Cheque regalo de Amazon.es canjeable por su valor en miles de artículos de www.amazon.es. Añádelo a tu usuario y disfruta de la gran variedad de productos que podrás encontrar en Amazon.es</p>
                        <p>*Se aplican restricciones. Ver los detalles en: amazon.es/cheques-regalo-condiciones.</p>
                    </div>
                    @if (seleccionBtn)
                    {
                        <form id="regalo-detail-form" action="seleccion-regalo-detail-form" method="post">
                            <input type="hidden" name="hiddenidsession" value="@hiddenidsession">
                            <div class="frmBtn"><div class="btnPremio">Seleccionar</div></div>
                        </form>
                    }
                    else
                    {
                        <div class="frmBtn"><div class="btnPremio Volver">Volver</div></div>
                    }
                </div>
            </div>
           
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $("body").addClass("bindex_det");
        $(".btnPremio").on('click', function () {
            var form = $("form[id=regalo-detail-form]");
            form.submit();
        });
        $(".Volver").on('click', function () {
            window.location.href = "@Url.Action("Index", "Regalos")";
        });
    </script>
}