@{
    ViewData["Title"] = "Usuario";
    Layout = "_Layout";
}
@section Styles{

}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Listado @ViewData["Title"]s
        <br />
        <small>Listado de @ViewData["Title"]s disponibles en la web de la campaña Michelin</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li class="active">@ViewData["Title"]s</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row right">
        <div class="col-md-12">
            <a class="btn btn-primary add-btn" onclick="ShowPopup('@Url.Action("Add","Usuarios")')"><i class="fa fa-plus"></i> Nuevo Usuario</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row" style="padding-right: 10px;padding-left: 10px;">
                        <div class="col-lg-12 table-responsive">
                            <table id="grid" name="grid" class="table table-bordered table-hover dataTable" width="100%" height="100vh">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Email</th>
                                        <th>Tipo Usuario</th>
                                        <th>País</th>
                                        <th>
                                            Estado
                                        </th>
                                        <th width="10%">

                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</section>
<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    
    <script src="~/js/views/user/index.js"></script>
}

