@model AdminApp.Models.UserAddViewModel
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Nuevo Usuario</h4>
</div>
<form onsubmit="return SubmitAdd(this)">
    <div class="box-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="nombre_usu" class="control-label"></label>
                    <input asp-for="nombre_usu" class="form-control" placeholder="Nombre"/>
                    <span asp-validation-for="nombre_usu" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="apellidos_usu" class="control-label"></label>
                    <input asp-for="apellidos_usu" class="form-control" placeholder="Apellidos"/>
                    <span asp-validation-for="apellidos_usu" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="tipo_usu" class="control-label"></label>
                    <select asp-for="tipo_usu" class="form-control" asp-items="Html.GetEnumSelectList<AdminApp.Enum.UserType>()"></select>
                    <span asp-validation-for="tipo_usu" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                
                <div class="form-group">
                    <label asp-for="pais_usu" class="control-label"></label>
                    <select asp-for="pais_usu" class="form-control" asp-items="Html.GetEnumSelectList<AdminApp.Enum.CountryType>()"></select>
                    <span asp-validation-for="pais_usu" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Email"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="Password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="box-footer">
        <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Registrar</button>
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Volver</button>
    </div>
</form>

<script>
    Ladda.bind('.btn', { timeout: 1000 });
</script>




