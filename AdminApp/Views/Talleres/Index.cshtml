@{
    ViewData["Title"] = "Taller";
    Layout = "_Layout";
}
@section Styles{

}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Listado @ViewData["Title"]es
        <br />
        <small>Listado de @ViewData["Title"]es disponibles en la web de la campaña Michelin</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li class="active">@ViewData["Title"]es</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row right">
        <div class="col-md-12">
            <a class="btn btn-primary add-btn" style="margin-left:10px;" onclick="ShowPopup('@Url.Action("Add","Talleres")')"><i class="fa fa-plus"></i> Nuevo Taller</a>
            <a class="btn btn-default csv-btn" asp-controller="Talleres" asp-action="TodasCSV"><i class="fa fa-file-excel-o"></i> Exportar Listado Talleres</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row right">
                        <div class="col-md-12">
                            

                        </div>
                    </div>
                    <div class="row" style="padding-right: 10px;padding-left: 10px;">
                        <div class="col-lg-12 table-responsive">
                            <table id="grid" name="grid" class="table table-bordered table-hover dataTable" width="100%" height="100vh">
                                <thead>
                                    <tr>
                                        <th>Razón social</th>
                                        <th>Alias</th>
                                        <th>LC</th>
                                        <th>HPDV</th>
                                        <th>ENSEÑA</th>
                                        <th>Dirección</th>
                                        <th>Población</th>
                                        <th>CP</th>
                                        <th>Provincia</th>
                                        <th>Pais</th>
                                        <th>Desde</th>
                                        <th>Región</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</section>
<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/js/views/workshop/index.js"></script>
}